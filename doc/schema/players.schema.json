{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Player",
  "type": "object",
  "required": ["playerId", "stats", "derived", "hp"],
  "properties": {
    "playerId": { "type": "string" },
    "name": { "type": "string" },
    "level": { "type": "integer" },
    "stats": { "type": "object" },
    "derived": { "type": "object" },
    "hp": { "type": "integer" },
    "equip": { "type": "object" },
    "resources": { "type": "object" }
  }
}
